import java.util.Scanner;
class AstriskAgaain
{
public static void main(String args[])
{
int rows;
int i,j;
Scanner sc = new Scanner(System.in);
System.out.println("Enter the number of rows ");
rows = sc.nextInt();        
for (i= 0; i<= rows-1 ; i++)
{
for (j=0; j<=i; j++)
{ 
System.out.print(" * "); 
} 
System.out.println();
} 
for(i=rows-1; i>=0; i--)
{
for(j=0; j <= i-1;j++)
{
System.out.print(" * ");
}
System.out.println();
}
}
}
